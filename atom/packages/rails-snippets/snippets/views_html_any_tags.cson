# Snippets triggered in views
#
# index.html.*
# <html>
#   <body>
#     <div dataa[tab]></div>
#   </body>
# </html>

'.meta.tag.any.html':

  'data-attribute':
    'prefix': 'dataa'
    'description': 'data-attribute="value"'
    'body': 'data-${1:name}="${2:hello}"$0'

  'class':
    'prefix': 'class'
    'description': 'class="class"'
    'body': 'class="${1:btn btn-primary}"$0'

  'id':
    'prefix': 'id'
    'description': 'id="id"'
    'body': 'id="${1:btn-preview}"$0'

  'style':
    'prefix': 'style'
    'description': 'style="cssprop: value;"'
    'body': 'style="${1:display: none;}"$0'
  'style=':
    'prefix': 'style='
    'description': 'style="cssprop: value;"'
    'body': 'style="${1:display: none;}"$0'

  'placeholder':
    'prefix': 'placeholder'
    'description': 'placeholder="placeholder"'
    'body': 'placeholder="${1:John Doe}"$0'

  'data-turbolinks':
    'prefix': 'datatl'
    'description': 'data-turbolinks="value"'
    'body': 'data-turbolinks="${1:false}"$0'
